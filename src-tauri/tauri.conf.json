{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:4000",
    "distDir": "../dist"
  },
  "package": {
    "productName": "native-ai",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "http": {
        "all": true,
        "request": true,
        "scope": ["https://*"]
      },
      "shell": {
        "all": false,
        "execute": true,
        "open": true
      },
      "dialog": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.tauri.dev",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": null
    },
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true,
      "menuOnLeftClick": false
    },
    "macOSPrivateApi": true,
    "windows": [
      {
        "title": "native-ai",
        "width": 800,
        "height": 600,
        "hiddenTitle": true,
        "decorations": true,
        "fullscreen": false,
        "resizable": true,
        "focus": false,
        "visible": true
      }
    ]
  }
}
